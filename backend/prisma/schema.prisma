generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Profile {
  id         String   @id @default(uuid())
  email      String?  @unique
  full_name  String?
  avatar_url String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  landingPages LandingPage[] @relation("UserLandingPages")
}

model LandingPage {
  id        String   @id @default(uuid())
  user_id   String
  title     String
  briefing  Json?
  content   Json
  status    String
  slug      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user      Profile  @relation(fields: [user_id], references: [id], name: "UserLandingPages")
}

model AnonymousPreview {
  id         String   @id @default(uuid())
  ip_address String?
  content    Json
  briefing   Json?
  expires_at DateTime
  created_at DateTime @default(now())
}
